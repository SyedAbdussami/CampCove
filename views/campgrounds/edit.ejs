<% include ../partials/header.ejs%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit the Camp</h1>
		<div style="margin: 25px auto;width: 30%">		
	<form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
		<div class="form-group">
			<input class="form-control" type="text" name="campground[name]" placeholder="enter camp name" value="<%=campground.name%>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[image]" placeholder="Enter Image URL" value="<%=campground.image%>">
		</div>
		<div class="form-group">
			<input class="form-control" type="text" name="campground[description]" placeholder="Enter Description" value="<%=campground.description%>">
		</div>
		<div class="form-group">
			<button class="btn btn-lg btn-primary btn-block">Submit </button>
		</div>
		
	</form>
	<a href="/campgrounds">Go Back</a>
	</div>
	
</div>
</div>

<% include ../partials/footer.ejs%>